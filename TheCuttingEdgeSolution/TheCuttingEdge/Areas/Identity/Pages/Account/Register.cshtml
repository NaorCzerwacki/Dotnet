@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<script>
    function showHide() {
        var div = document.getElementById('notification');
        if (div.style.display == 'none') {
            div.style.display = '';
        }
        else {
            div.style.display = 'none';
        }
    }
</script>

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Join our great community.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Username"></label>
                <input asp-for="Input.Username" class="form-control" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" id="subBtn" class="btn btn-primary" onclick="this.disabled=true;this.form.submit();showHide();" style="float: left; background-color: #d1ecf1;color: #0c5460; border-color: #0c5460;">Register</button>
            <div id="notification" style="display:none; float: left; margin-left: 10px; color: green; line-height: 38px;">
                Registering New User, Please wait...
            </div>
        </form>
    </div>
    <div class="col-md-8" style="margin-top:10px;">
        <img src="~/img/activity-adult-adventure-1376960.jpg" style="width: 100%; max-width: 540px;"/>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
